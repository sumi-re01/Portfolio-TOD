<div id="user">
  <h1 class="page-name">MY PAGE</h1>

  <div class="user__profile">
    <%= attachment_image_tag @user, :profile_image, format: 'jpg', fallback: "no-image.jpeg", id: "prf-img" %>
      <div class="user__content">
        <p class="name"><%= @user.name %></p>
        <%= link_to edit_user_path(@user.id) do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
  </div>

  <div class="user__travels">
    <div class="travel__new">
      <%= form_with model: @travel, url: travels_path, remote:true do |f| %>
        <div class="form__item">
          <%= f.text_field :title, placeholder:"Please name your trip", class:"form__field" %>
          <%= f.date_field :date, class:"form date" %>
        </div>
        <%= f.submit "Create", class:"form__btn" %>
      <% end %>

      <div id="travel">
        <%= render 'travels/index', travels: @travels %>
      </div>
    </div>

    <div class="gallery__index">
      <%= link_to "旅を共有する", new_gallery_path %>
      <%#=form_with model: @gallery, url: new_gallery_path, local: true do |f| %>
        <%#= f.collection_select(:travel_id, @travels, :id, :date, {prompt:"共有する旅の日程を選択してください", class:"select_box"}) %><br />
        <%#= f.submit "日記を書く" %>
      <%# end %>
      <% @galleries.each do |gallery| %>
        <div class="galleries__box">
          <%= link_to gallery_path(gallery) do %>
            <%= image_tag gallery.images[0].to_s %>
          <% end %>
          <%= gallery.travel.title %>
          <%= gallery.travel.date %>
        </div>
      <% end %>
    </div>
  </div>

</div>